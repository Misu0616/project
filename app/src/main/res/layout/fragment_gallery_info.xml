<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180sp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="25sp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/adminDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textAlignment="center"
        android:fontFamily="@font/nanumsquareround"/>/>

    <TextView
        android:id="@+id/adminUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="사용자 아이디"
        android:textAlignment="center"
        android:fontFamily="@font/nanumsquareround"/>/>

    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="인증 활동 제목"
        android:textAlignment="center"
        android:fontFamily="@font/nanumsquareround"/>/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/adminCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/adminCheckCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증 멘트"
            android:textColor="#FF0000"
            android:fontFamily="@font/nanumsquareround"/>/>
    </LinearLayout>

    <ImageView
        android:id="@+id/memberPic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/recyclebag" />

</LinearLayout>